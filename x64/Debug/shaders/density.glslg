#version 400 core

layout(points) in;
layout(triangle_strip, max_vertices = 4) out;

flat out int layer;

uniform ivec2 dimensions;

void main(){
	layer = int(gl_in[0].gl_Position.x);
	gl_Layer = layer;
	gl_Position = vec4(-1.0, -1.0, 0.0, 1.0);
	EmitVertex();
	gl_Position = vec4(1.0, -1.0, 0.0, 1.0);
	EmitVertex();
	gl_Position = vec4(-1.0, 1.0, 0.0, 1.0);
	EmitVertex();
	gl_Position = vec4(1.0, 1.0, 0.0, 1.0);
	EmitVertex();
	EndPrimitive();
}